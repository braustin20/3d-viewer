{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "Node",
    "noResolve": false,
    "noImplicitAny": false,
    "sourceMap": false,
    "preserveConstEnums":true,
    "declaration": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "lib": [
        "es2017",
        "dom"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots" : ["node_modules/@types", "src/types"]
  },
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true
  },
}